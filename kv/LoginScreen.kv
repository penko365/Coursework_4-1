<ClickableTextFieldRound>:
    # size_hint_y: None
    height: text_field.height
    text: text_field.text

    MDTextField:
        id: text_field
        mode: "round"
        hint_text: root.hint_text
        font_size: 36
        text: root.text
        password: True
        icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        # pos_hint: {"center_y": 0.5}
        pos: text_field.width - self.width + dp(8), 0.
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

<LoginScreen>
    # name: "LoginScreen"

    MDLabel:
        text: "LOGIN"
        font_size: 40
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15
        
    MDCard:
        size_hint: 0.8, 0.8
        # size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 4
        padding: 25
        spacing: 25
        style: "outlined"
        line_color: "orange"
        orientation: 'vertical'
        id: card
        font_size: 40

        MDTextField:
            id: username_fld
            text: "pharmacy_admin"
            mode: "round"
            hint_text: "username"
            icon_left: "account"
            # size_hint_y: .05
            # width: 200
            font_size: card.font_size
            max_text_length: 32
            pos_hint: {'center_x': 0.5}
        
        ClickableTextFieldRound:
            id: password_fld
            text: "admin"
            hint_text: "password"
            icon_right: "eye-off"
            # size_hint_x: None
            # width: 200
            font_size: card.font_size
            max_text_length: 15
            password: True
            pos_hint: {'center_x': 0.5}
        
        MDTextField:
            id: dbname_fld
            text: "pharmacy_db"
            mode: "round"
            hint_text: "database name"
            # size_hint_x: None
            # width: 200
            font_size: card.font_size
            pos_hint: {'center_x': 0.5}
        
        MDTextField:
            id: host_fld
            text: "127.0.0.1:5432"
            mode: "round"
            hint_text: "database IP or FQDN"
            # size_hint_x: None
            # width: 200
            font_size: card.font_size
            pos_hint: {'center_x': 0.5}
        
        MDFlatButton:
            id: submit_btn
            text: "Submit"
            md_bg_color: 'orange'
            font_size: card.font_size
            size_hint: 0.8, .3
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.login()